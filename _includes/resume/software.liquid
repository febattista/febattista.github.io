<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign software = data[1] %}
  {% for content in software %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-2 cl-sm-2 col-md-2 text-center date-column">
          <table class="table-cv">
            <tbody>
              <tr>
                <td>
                  <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">
                    {{ content.role }}
                  </span>
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        {% assign highlights = '' %}
        {% for item in content.highlights %}
          {% assign highlights = highlights | append: item | append: ' / ' %}
        {% endfor %}

        {% assign slice_length = highlights.size | minus: 3 %}
        {% assign highlights_trimmed = highlights | slice: 0, slice_length %}

        <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4">
            <a href="{{ content.url }}">{{ content.name }}</a>
            <span class="ml-1" style="font-size: 0.8rem; font-weight: normal;">{{ highlights_trimmed }}</span>
          </h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem; text-align: justify;">{{ content.summary }}</h6>
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
